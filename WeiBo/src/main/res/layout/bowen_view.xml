<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/bowen_touxiang"
           android:layout_width="50dp"
           android:layout_height="50dp" />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:id="@+id/mingzi_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/time_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           </LinearLayout>
       </LinearLayout>
    <TextView
        android:id="@+id/neirong_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/xiaoxi_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/zhuanfa"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@mipmap/zhuanfa"
            android:background="@drawable/radio_background"/>
        <RadioButton
            android:id="@+id/pinglun"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:button="@null"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/xiaoxi"
            android:background="@drawable/radio_background"/>
        <RadioButton
            android:id="@+id/zan"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@mipmap/dianzan"
            android:background="@drawable/radio_background"/>
    </RadioGroup>
</LinearLayout>
